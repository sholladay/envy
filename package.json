{
    "name": "envy",
    "version": "2.0.0",
    "description": "Load .env files and environment variables",
    "homepage": "https://github.com/sholladay/envy",
    "main": "index.js",
    "author": {
        "name": "Seth Holladay",
        "url": "https://seth-holladay.com",
        "email": "me@seth-holladay.com"
    },
    "scripts": {
        "test": "xo && ./setup-tests.sh && ava"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:sholladay/envy.git"
    },
    "bugs": {
        "url": "https://github.com/sholladay/envy/issues",
        "email": "me@seth-holladay.com"
    },
    "engines": {
        "node": ">=10"
    },
    "license": "MPL-2.0",
    "files": [
        "lib",
        "index.js"
    ],
    "dependencies": {
        "camelcase": "^5.0.0",
        "camelcase-keys": "^5.0.0",
        "filter-obj": "^1.1.0",
        "is-wsl": "^1.1.0",
        "path-type": "^3.0.0"
    },
    "devDependencies": {
        "ava": "^1.0.1",
        "eslint-config-tidy": "^0.7.0",
        "xo": "^0.23.0"
    },
    "keywords": [
        "env",
        "environment",
        "dotfile",
        "dotenv",
        ".env",
        "safe",
        "hidden",
        "secure",
        "process",
        "credential",
        "credentials",
        "var",
        "vars",
        "variable",
        "variables",
        "conf",
        "config",
        "configuration",
        "option",
        "file",
        "files"
    ],
    "xo": {
        "extend": "tidy",
        "overrides": [
            {
                "files": [
                    "index.js",
                    "lib/load-env-file.js"
                ],
                "rules": {
                    "no-sync": "off",
                    "no-bitwise": [
                        "error",
                        {
                            "allow": [
                                "&",
                                "|"
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
